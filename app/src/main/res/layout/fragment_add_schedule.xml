<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_login">


    <EditText
        android:maxLength="2"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:id="@+id/txt_Hours"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="HH"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txt_monitorS"
        app:layout_constraintStart_toStartOf="@+id/txt_monitorS" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="2dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:text=" : "
        app:layout_constraintStart_toEndOf="@+id/txt_Hours"
        app:layout_constraintTop_toTopOf="@+id/txt_Hours" />

    <EditText
        android:maxLength="2"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:id="@+id/txt_Minutes"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="MM"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/txt_Hours" />

    <EditText
        android:id="@+id/txt_Day"
        android:maxLength="2"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:hint="Day"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/txt_Hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_monitorS" />

    <EditText
        android:maxLength="2"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:id="@+id/txt_Month"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Month"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/txt_Day"
        app:layout_constraintTop_toTopOf="@+id/txt_Day" />

    <EditText
        android:id="@+id/txt_Year"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:hint="Year"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/txt_Month"
        app:layout_constraintTop_toTopOf="@+id/txt_Month" />

    <EditText
        android:id="@+id/txt_monitorS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:hint="Monitor Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_clientS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/txt_clientS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Client Username"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_repetition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/txt_repetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="number of Repetitions"
        android:padding="10dp"
        android:textColorHint="@color/login_form_details"
        android:textColor="@color/login_form_details"
        android:background="@drawable/bg_edittext"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_AddSchedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_AddSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"

        android:background="@drawable/bg_btn"
        android:padding="16dp"
        android:text="Add Schedule"
        android:textColor="@color/login_form_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Schedule :"
        android:textSize="40dp"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:textColor="@color/login_form_details"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_Month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>